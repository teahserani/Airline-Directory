Stock_item::Stock_item(string description, int code_number)
{
	this->description=description;
	this->code_number=code_number;
}      
void Stock_item::set_description()
{
	this->description=description;
}
void Stock_item::set_item_number()
{
	this->code_number=code_number;
}
string Stock_item::get_description()    // returns the item description
{		
	return description;
}
int Stock_item::get_item_number()       // returns the code number of the item
{
	return code_number;
}
